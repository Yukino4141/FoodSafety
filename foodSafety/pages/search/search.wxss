/* pages/search/search.wxss */

/* 基础样式 */
.search-page {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 状态栏 */
.status-bar {
  background: #ffffff;
}

/* 搜索栏 */
.search-bar {
  background: #ffffff;
  padding: 10rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  border: 1rpx solid #e9ecef;
}

.search-icon {
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
}

.clear-btn {
  padding: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-action {
  padding: 20rpx 30rpx;
  background: #2ecc71;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
  white-space: nowrap;
}

/* 搜索历史区域 */
.search-history-section {
  padding: 40rpx 30rpx;
  background: #ffffff;
  margin-top: 20rpx;
}

/* 热门搜索区域 */
.hot-search-section {
  padding: 40rpx 30rpx;
  background: #ffffff;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  font-size: 26rpx;
  color: #2ecc71;
}

/* 搜索历史列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item icon {
  margin-right: 20rpx;
}

.history-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow-icon {
  margin-left: 10rpx;
}

/* 热门搜索标签 */
.hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  border: 1rpx solid #e9ecef;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
}

/* 热门标签样式（前三名） */
.tag-item.hot-tag {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1), rgba(255, 167, 38, 0.1));
  border-color: rgba(255, 107, 107, 0.2);
}

.tag-content {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

/* 排名序号 */
.rank-number {
  width: 36rpx;
  height: 36rpx;
  background: #e9ecef;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  color: #666;
}

/* 热门排名样式 */
.rank-number.hot-rank {
  font-weight: bold;
  color: #ffffff;
}

.rank-number.hot-rank:nth-child(1) {
  background: #ff6b6b; /* 第一名 - 红色 */
}

.rank-number.hot-rank:nth-child(2) {
  background: #ffa726; /* 第二名 - 橙色 */
}

.rank-number.hot-rank:nth-child(3) {
  background: #42a5f5; /* 第三名 - 蓝色 */
}

.tag-text {
  line-height: 1.4;
  font-weight: 500;
}

/* 火花图标 */
.fire-icon {
  margin-left: 5rpx;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.1);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 搜索结果 */
.search-results {
  padding: 30rpx;
}

.results-header {
  margin-bottom: 30rpx;
}

.results-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.results-count {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-left: 10rpx;
}

.results-keyword {
  font-size: 28rpx;
  color: #2ecc71;
  font-weight: 500;
}

/* 商品卡片 */
.results-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.product-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-image-container {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #f8f9fa;
}

.safety-badge {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  white-space: nowrap;
}

.badge-safe {
  background: rgba(46, 204, 113, 0.9);
}

.badge-danger {
  background: rgba(231, 76, 60, 0.9);
}

.badge-text {
  color: #ffffff;
  margin-left: 4rpx;
  font-size: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.risk-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #e74c3c;
}

.ingredients-preview {
  background: #f8f9fa;
  padding: 12rpx 18rpx;
  border-radius: 10rpx;
}

.preview-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.barcode-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.barcode-text {
  font-size: 24rpx;
  color: #999;
}

.arrow-icon {
  margin-left: 20rpx;
}

/* 无结果 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty-illustration {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-image {
  width: 100%;
  height: 100%;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.empty-action {
  padding: 25rpx 50rpx;
  background: #2ecc71;
  border-radius: 50rpx;
}

.action-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #2ecc71;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 悬停效果 */
.card-hover {
  background: #f8f9fa;
  transform: translateY(-2rpx);
  transition: all 0.2s ease;
}

.tag-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

/* 占位符样式 */
.placeholder {
  color: #9ca3af;
  font-size: 28rpx;
}