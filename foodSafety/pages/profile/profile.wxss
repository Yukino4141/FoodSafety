/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding-bottom: 40rpx;
}

/* 头部用户信息 */
.user-header {
  padding: 40rpx 30rpx;
}

.user-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.user-info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #2ecc71, #3498db);
}

.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #2ecc71;
  margin-right: 30rpx;
}

.user-basic {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.member-info {
  font-size: 24rpx;
  color: #666;
}

.vip-badge {
  margin-top: 15rpx;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #ffd700, #ffa500);
  border-radius: 20rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}

.vip-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #8b4513;
}

.expire-text {
  font-size: 20rpx;
  color: #8b4513;
  opacity: 0.8;
}

.login-section,
.logout-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.login-tip {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.login-btn,
.logout-btn {
  background: linear-gradient(135deg, #2ecc71, #3498db);
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.logout-btn {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
}

/* 用户画像编辑页面 */
.profile-edit-page {
  background: white;
  min-height: 100vh;
}

.edit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  background: white;
  position: sticky;
  top: 0;
  z-index: 10;
}

.back-btn,
.clear-btn {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.back-btn .icon,
.clear-btn .icon {
  margin-right: 10rpx;
}

.edit-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  color: #e74c3c;
}

.section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #666;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 15rpx 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  background: white;
  transition: all 0.3s ease;
}

.tag-item.selected {
  background: linear-gradient(135deg, #2ecc71, #3498db);
  color: white;
  border-color: #2ecc71;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(46, 204, 113, 0.3);
}

.diet-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.diet-item {
  padding: 25rpx 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  background: white;
  transition: all 0.3s ease;
}

.diet-item.selected {
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
  color: white;
  border-color: #9b59b6;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(155, 89, 182, 0.3);
}

.preview-section {
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx solid #e0e0e0;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  padding: 40rpx 30rpx;
  background: white;
  position: sticky;
  bottom: 0;
  border-top: 1rpx solid #eee;
}

.cancel-btn,
.save-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: none;
  max-width: 60px;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666;
}

.save-btn {
  background: linear-gradient(135deg, #2ecc71, #3498db);
  color: white;
}

/* 正常状态下的个人中心页面 */
.main-content {
  padding: 0 30rpx;
}

.profile-card {
  background: white;
