  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  margin: 0 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(52, 152, 219, 0.1);
