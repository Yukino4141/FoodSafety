  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

/* 成员卡片 */
.member-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: flex-start;
  transition: all 0.3s ease;
}

.member-card.active {
  border: 2rpx solid #07c160;
  background-color: #f8fff9;
}

.member-card.current {
  background-color: #f0f9ff;
}

/* 成员头像 */
.member-avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}

.member-avatar .avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.avatar-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  border: 2rpx solid white;
}

/* 成员详情 */
.member-details {
  flex: 1;
}

.member-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.member-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.member-status-group {
  display: flex;
  align-items: center;
}

.member-age {
  font-size: 28rpx;
  color: #666666;
  margin-right: 16rpx;
}

.member-status {
  font-size: 24rpx;
  color: white;
  background-color: #07c160;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.current-status {
  background-color: #007aff;
}

/* 健康标签 */
.member-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.health-tag {
  background-color: #f0f7ff;
  border: 1rpx solid #c2e0ff;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.tag-text {
  font-size: 24rpx;
  color: #007aff;
}

/* 操作按钮 */
.member-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative; /* 添加相对定位，作为绝对定位的参考 */
  min-height: 50rpx; /* 确保有足够高度 */
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  background-color: transparent;
  border: none; 
}

.switch-btn {
  background-color: #38c77d;
  color: white;
  min-width: 140px;
}

.switch-btn .btn-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.more-btn {
  position: absolute; /* 绝对定位 */
  right: 0; /* 固定在右侧 */
  top: 50%; /* 垂直居中 */
  transform: translateY(-50%); /* 垂直居中调整 */
  padding: 12rpx;
  color: #666666;
  max-width: 50px;
  background: none;
  margin: 0;
  line-height: 1;
}

.more-btn .btn-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 确保按钮没有默认样式 */
.more-btn::after {
  border: none;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.empty-action-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 24rpx 64rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

/* 使用说明 */
.usage-guide {
  background-color: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.guide-header {
  margin-bottom: 24rpx;
}

.guide-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.guide-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.guide-item {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 成员选项弹窗 */
.member-options-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 100%;
  background-color: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
}

.modal-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.option-list {
  margin-bottom: 32rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  background-color: #f9f9f9;
}

.option-item.delete {
  background-color: #fff5f5;
}

.option-icon {
  margin-right: 24rpx;
  font-size: 36rpx;
}

.option-item.delete .option-icon {
  color: #ff3b30;
}

.option-text {
  font-size: 32rpx;
  color: #333333;
}

.option-item.delete .option-text {
  color: #ff3b30;
}

.cancel-btn {
  width: 100%;
  background-color: #f0f0f0;
  color: #333333;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 32rpx;
  border: none;
}