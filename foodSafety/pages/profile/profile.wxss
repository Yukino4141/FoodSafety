  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.preview-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.preview-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.preview-tag {
  background: linear-gradient(135deg, #2ecc71, #27ae60);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}