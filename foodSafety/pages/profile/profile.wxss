.tip-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #2e7d32;
  margin-bottom: 10rpx;
}

.tip-content {
  font-size: 24rpx;
  color: #388e3c;
  line-height: 1.5;
}

