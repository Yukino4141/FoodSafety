  align-items: center;
}

.perspective-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #3498db;
}

.perspective-text {
  display: flex;
  flex-direction: column;
}

.perspective-title {
  font-size: 24rpx;
