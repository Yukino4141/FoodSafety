/* pages/test/test.wxss */
.container {
  padding: 20px;
  min-height: 100vh;
  background: #f7f9f8;
}

.header {
  margin-bottom: 30px;
}

.title {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 8px;
}

.subtitle {
  font-size: 14px;
  color: #95a5a6;
}

.test-list {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  margin-bottom: 30px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.05);
}

.test-item {
  display: flex;
  align-items: center;
  padding: 20px;
  border-bottom: 1px solid #f0f0f0;
}

.test-item:last-child {
  border-bottom: none;
}

.test-icon {
  font-size: 24px;
  margin-right: 15px;
  width: 40px;
  height: 40px;
  background: #f0f2f5;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.test-info {
  flex: 1;
}

.test-name {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 4px;
}

.test-desc {
  font-size: 13px;
  color: #95a5a6;
}

.section {
  background: white;
  padding: 20px;
  border-radius: 16px;
  margin-bottom: 20px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.05);
}

.section-title {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
}

.scan-btn {
  width: 100%;
  background: #2ecc71;
  color: white;
  border-radius: 10px;
  padding: 15px;
  font-size: 16px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-btn icon {
  margin-right: 8px;
}

.scan-btn::after {
  border: none;
}

.barcode-input {
  width: 100%;
  padding: 15px;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  margin-bottom: 15px;
  font-size: 15px;
}

.go-btn {
  width: 100%;
  background: #3498db;
  color: white;
  border-radius: 10px;
  padding: 15px;
  font-size: 16px;
  font-weight: 500;
}

.go-btn::after {
  border: none;
}