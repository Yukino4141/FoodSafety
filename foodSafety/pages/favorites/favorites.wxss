/* pages/favorites/favorites.wxss */
page {
  background-color: #f5f5f5;
  height: 100%;
}

.favorites-page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 导航栏样式 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
}

.nav-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-btn .icon {
  font-size: 40rpx;
  color: #333333;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.nav-right {
  display: flex;
  align-items: center;
}

.edit-btn {
  padding: 12rpx 24rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.edit-btn text {
  font-size: 28rpx;
  color: #333333;
}

/* 加载状态 */
.loading-container,
.error-container,
.empty-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.loading-content,
.error-content,
.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon,
.error-icon,
.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.loading-text,
.error-text,
.empty-text,
.empty-hint {
  font-size: 32rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 20rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999999;
}

.retry-btn,
.scan-btn {
  margin-top: 40rpx;
  width: 300rpx;
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}

/* 编辑工具栏 */
.edit-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
}

.select-all {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #cccccc;
  border-radius: 8rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background-color: #07c160;
  border-color: #07c160;
}

.check-icon {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.select-text {
  font-size: 32rpx;
  color: #333333;
}

.batch-actions {
  display: flex;
  align-items: center;
}

.selected-count {
  font-size: 28rpx;
  color: #666666;
  margin-right: 24rpx;
}

.batch-actions .delete-btn {
  padding: 12rpx 24rpx;
  background-color: #ff3b30;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 收藏列表 */
.favorites-list {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.scroll-view {
  flex: 1;
  height: 100%;
}

.list-content {
  padding-bottom: 40rpx;
}

/* 收藏商品项 */
.favorite-item {
  background-color: white;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: flex-start;
}

.favorite-item.selected {
  background-color: #f0f9ff;
  border: 2rpx solid #07c160;
}

.item-checkbox {
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
}

.item-content {
  flex: 1;
  display: flex;
  padding: 24rpx;
  padding-left: 0;
}

/* 商品图片 */
.product-image {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.product-image .image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.safety-badge {
  position: absolute;
  top: 0;
  right: 0;
  padding: 6rpx 12rpx;
  border-bottom-left-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.safety-badge.green {
  background-color: #07c160;
}

.safety-badge.orange {
  background-color: #ff9500;
}

.safety-badge.red {
  background-color: #ff3b30;
}

.safety-badge.gray {
  background-color: #cccccc;
}

/* 商品信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-header {
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  display: block;
  margin-bottom: 8rpx;
}

.product-barcode {
  font-size: 26rpx;
  color: #999999;
}

.product-details {
  margin-bottom: 16rpx;
}

.detail-item {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.detail-item.ingredients {
  color: #ff9500;
}

/* 风险提示 */
.risk-info {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  background-color: #fff7e6;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.risk-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.risk-text {
  font-size: 26rpx;
  color: #ff9500;
  line-height: 1.4;
}

/* 更新时间 */
.update-time {
  display: flex;
  align-items: center;
}

.time-icon {
  font-size: 26rpx;
  color: #999999;
  margin-right: 8rpx;
}

.time-text {
  font-size: 26rpx;
  color: #999999;
}

/* 操作按钮 */
.item-actions {
  margin-left: 24rpx;
  display: flex;
  align-items: center;
}

.remove-btn {
  padding: 12rpx 24rpx;
  background-color: #ff3b30;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  white-space: nowrap;
}

/* 加载更多 */
.load-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text,
.more-text,
.no-more-text {
  font-size: 28rpx;
  color: #999999;
}

/* 底部工具栏 */
.bottom-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx 32rpx;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.toolbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selected-info {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.batch-delete-btn {
  background-color: #ff3b30;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .product-image {
    width: 160rpx;
    height: 160rpx;
  }
  
  .product-name {
    font-size: 30rpx;
  }
  
  .detail-item {
    font-size: 26rpx;
  }
}