/* pages/inventory/inventory.wxss */
.inventory-page {
  min-height: 100vh;
  background: #f5f5f5;
  position: relative;
}

/* 自定义导航栏样式 */
.navbar-right {
  padding: 0 10rpx;
}

.navbar-right .icon-scan {
  font-size: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #e0e0e0;
  border-top-color: #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 40rpx;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  text-align: center;
}

.error-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
}

.error-text {
  font-size: 32rpx;
  color: #666;
  line-height: 1.5;
}

.retry-btn {
  background: #4CAF50;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* 统计卡片 */
.stats-section {
  padding: 30rpx;
}

.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-refresh {
  font-size: 36rpx;
  color: #4CAF50;
  padding: 10rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 12rpx;
  opacity: 0.6;
  transition: all 0.3s;
}

.stat-item.active {
  opacity: 1;
  background: rgba(76, 175, 80, 0.1);
}

.stat-item.fresh.active {
  background: rgba(46, 204, 113, 0.1);
}

.stat-item.expiring.active {
  background: rgba(243, 156, 18, 0.1);
}

.stat-item.expired.active {
  background: rgba(231, 76, 60, 0.1);
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-item.fresh .stat-number {
  color: #2ecc71;
}

.stat-item.expiring .stat-number {
  color: #f39c12;
}

.stat-item.expired .stat-number {
  color: #e74c3c;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.warning-tip {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(243, 156, 18, 0.1);
  border: 1rpx solid #f39c12;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.warning-tip .iconfont {
  color: #f39c12;
  font-size: 32rpx;
}

.warning-tip text {
  font-size: 26rpx;
  color: #f39c12;
  flex: 1;
}

/* 筛选区域 */
.filter-section {
  padding: 0 30rpx 20rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-tags {
  display: flex;
  gap: 20rpx;
}

.filter-tag {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  background: white;
  border: 1rpx solid #e0e0e0;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-tag.active {
  background: #4CAF50;
  border-color: #4CAF50;
  color: white;
}

.filter-tag-count {
  background: #f0f0f0;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  font-size: 24rpx;
  min-width: 40rpx;
  text-align: center;
}

.filter-tag.active .filter-tag-count {
  background: rgba(255, 255, 255, 0.3);
}

.filter-tag-count.has-count {
  background: #ff6b6b;
  color: white;
}

/* 空状态 */
.empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 50vh;
  padding: 40rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  text-align: center;
}

.empty-icon {
  width: 300rpx;
  height: 300rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #999;
}

.empty-subtext {
  font-size: 28rpx;
  color: #aaa;
  line-height: 1.5;
}

.empty-buttons {
  display: flex;
  gap: 30rpx;
  margin-top: 20rpx;
}

.primary-btn, .secondary-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.primary-btn {
  background: #4CAF50;
  color: white;
}

.secondary-btn {
  background: white;
  color: #666;
  border: 1rpx solid #e0e0e0;
}

.primary-btn::after, .secondary-btn::after {
  border: none;
}

/* 库存列表 */
.inventory-list-section {
  padding: 0 30rpx 120rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.batch-delete {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #e74c3c;
  padding: 10rpx 20rpx;
}

.batch-delete .iconfont {
  font-size: 28rpx;
}

.inventory-list {
  height: calc(100vh - 600rpx);
}

.inventory-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.inventory-item.expiring {
  border-left: 8rpx solid #f39c12;
}

.inventory-item.expired {
  border-left: 8rpx solid #e74c3c;
}

.item-main {
  display: flex;
  padding: 30rpx;
  align-items: center;
  gap: 30rpx;
}

.item-image {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background: #f0f0f0;
}

.status-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.status-1 {
  background: #2ecc71;
}

.status-2 {
  background: #f39c12;
}

.status-3 {
  background: #e74c3c;
}

.status-badge .iconfont {
  font-size: 24rpx;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.3;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.days-left {
  font-size: 24rpx;
  font-weight: bold;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 10rpx;
  flex-shrink: 0;
}

.days-left.safe {
  background: rgba(46, 204, 113, 0.1);
  color: #2ecc71;
}

.days-left.warning {
  background: rgba(243, 156, 18, 0.1);
  color: #f39c12;
}

.days-left.danger {
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
}

.item-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 15rpx;
}

.expiry-date, .purchase-date {
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.expiry-date .iconfont, .purchase-date .iconfont {
  font-size: 22rpx;
  color: #999;
}

.item-status {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
}

.status-msg {
  font-size: 22rpx;
  color: #999;
  flex: 1;
}

.item-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: none;
  background: none;
  font-size: 26rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.action-btn::after {
  border: none;
}

.action-btn.edit {
  color: #666;
  background: #f8f9fa;
}

.action-btn.edit:active {
  background: #e9ecef;
}

.action-btn.delete {
  color: #e74c3c;
  background: rgba(231, 76, 60, 0.1);
}

.action-btn.delete:active {
  background: rgba(231, 76, 60, 0.2);
}

/* 悬浮按钮 */
.floating-buttons {
  position: fixed;
  bottom: 160rpx;
  right: 40rpx;
  z-index: 100;
}

.fab {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(76, 175, 80, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: none;
}

.fab::after {
  border: none;
}

.fab .iconfont {
  font-size: 40rpx;
}

.fab-text {
  font-size: 20rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  padding: 20rpx 30rpx;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  z-index: 90;
}

.action-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: none;
  border: none;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #666;
}

.action-button::after {
  border: none;
}

.action-button.primary {
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 16rpx;
}

.action-button .iconfont {
  font-size: 40rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 30rpx;
  width: 100%;
  max-width: 600rpx;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-header .icon-close {
  font-size: 36rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 40rpx;
}

.edit-modal .modal-body {
  max-height: 70vh;
  overflow-y: auto;
}

/* 商品预览 */
.product-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.preview-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.preview-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
}

/* 表单样式 */
.edit-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-label.required::after {
  content: '*';
  color: #e74c3c;
  margin-left: 4rpx;
}

.form-input {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s;
}

.form-input.has-value {
  color: #333;
  border-color: #4CAF50;
}

.form-input .iconfont {
  color: #999;
  font-size: 28rpx;
}

.date-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 10rpx;
}

.date-info .iconfont {
  color: #4CAF50;
  font-size: 28rpx;
}

.date-info text {
  font-size: 24rpx;
  color: #4CAF50;
}

/* 删除弹窗 */
.delete-modal .modal-body {
  text-align: center;
}

.delete-icon {
  margin-bottom: 30rpx;
}

.delete-icon .iconfont {
  font-size: 80rpx;
  color: #e74c3c;
}

.delete-message {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: block;
}

.delete-tip {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 40rpx;
}

.modal-footer .btn {
  flex: 1;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.modal-footer .btn::after {
  border: none;
}

.modal-footer .btn.cancel {
  background: #f8f9fa;
  color: #666;
}

.modal-footer .btn.cancel:active {
  background: #e9ecef;
}

.modal-footer .btn.confirm {
  background: #4CAF50;
  color: white;
}

.modal-footer .btn.confirm:active {
  background: #3d8b40;
}

.modal-footer .btn.confirm.loading {
  opacity: 0.8;
}

.modal-footer .btn.confirm.loading .loading-spinner {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  display: inline-block;
  margin-right: 10rpx;
  vertical-align: middle;
}

.modal-footer .btn.danger {
  background: #e74c3c;
}

.modal-footer .btn.danger:active {
  background: #c0392b;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .stats-grid {
    flex-wrap: wrap;
  }
  
  .stat-item {
    flex: 0 0 calc(50% - 10rpx);
    margin-bottom: 20rpx;
  }
  
  .filter-tag {
    padding: 14rpx 24rpx;
    font-size: 26rpx;
  }
  
  .item-main {
    padding: 24rpx;
  }
  
  .item-image {
    width: 120rpx;
    height: 120rpx;
  }
}

/* 自定义滚动条样式 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 日期选择器弹窗样式 */
.date-picker-modal {
  max-width: 700rpx;
}

.date-picker-modal .modal-body {
  padding: 40rpx;
}

/* 快速设置按钮 */
.quick-date-buttons {
  margin-bottom: 40rpx;
}

.quick-date-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.quick-date-btn {
  flex: 1;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
}

.quick-date-btn::after {
  border: none;
}

.quick-date-btn:active {
  background: #e9ecef;
}

.quick-date-btn[data-type="today"] {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
}

.quick-date-btn[data-type="today"]:active {
  background: #3d8b40;
}

/* 日期选择器显示区域 */
.date-picker-display {
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.selected-date {
  font-size: 28rpx;
  color: #333;
}

.date-picker-display .iconfont {
  color: #999;
  font-size: 28rpx;
}

/* 日期预览 */
.date-preview {
  text-align: center;
  padding: 20rpx;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.preview-text {
  font-size: 28rpx;
  color: #4CAF50;
  display: block;
  margin-bottom: 10rpx;
}

.preview-days {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 表单输入容器 */
.form-input-container {
  position: relative;
}

.form-input {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx 50rpx 24rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s;
}

.form-input.has-value {
  color: #333;
  border-color: #4CAF50;
}

.form-input .iconfont {
  color: #999;
  font-size: 28rpx;
}

.form-input-clear {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.form-input-clear .iconfont {
  font-size: 24rpx;
}

/* 警告信息 */
.warning-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(231, 76, 60, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.warning-info .iconfont {
  color: #e74c3c;
  font-size: 28rpx;
}

.warning-info text {
  font-size: 24rpx;
  color: #e74c3c;
  flex: 1;
}