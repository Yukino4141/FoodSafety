/* pages/community/my-posts/my-posts.wxss */

.my-posts-page {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 顶部栏 */
.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  background: white;
  border-bottom: 1px solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 6px;
}

.back-text {
  font-size: 16px;
  color: #333;
}

.header-title {
  flex: 1;
  text-align: center;
}

.title-text {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.publish-btn {
  background: linear-gradient(135deg, #2ecc71, #1eaf5b);
  color: white;
  border-radius: 20px;
  padding: 0 16px;
  font-size: 14px;
  height: 36px;
  line-height: 36px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.menu-button .delete-btn {
  padding: 0;
  margin: 0;
  line-height: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(180, 0, 0);
  width: 70rpx;
  height: 50rpx;
}

.menu-button .delete-btn::after {
  border: none;
}

.menu-button .delete-icon {
  width: 34rpx;
  height: 36rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  background: white;
  margin: 20px;
  border-radius: 12px;
}

.error-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 20px;
}

.error-text {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
  text-align: center;
}

.reload-btn {
  background: #2ecc71;
  color: white;
  border-radius: 20px;
  padding: 0 30px;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
}

/* 未登录提示 */
.login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px;
}

.login-icon {
  width: 100px;
  height: 100px;
  margin-bottom: 20px;
  opacity: 0.7;
}

.login-text {
  font-size: 16px;
  color: #666;
  margin-bottom: 30px;
}

.login-btn {
  background: linear-gradient(135deg, #2ecc71, #1faf5b);
  color: white;
  border-radius: 24px;
  padding: 0 40px;
  height: 48px;
  line-height: 48px;
  font-size: 16px;
}

/* 加载状态 */
.loading-overlay {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
}

.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #2ecc71;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 16px;
  color: #999;
}

/* 空状态 */
.empty-overlay {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70vh;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
  padding: 0 40px;
}

.empty-icon {
  width: 100px;
  height: 100px;
  opacity: 0.5;
  margin-bottom: 10px;
}

.empty-text {
  font-size: 18px;
  color: #666;
  font-weight: 500;
}

.empty-subtext {
  font-size: 14px;
  color: #999;
  margin-bottom: 30px;
}

.empty-action {
  background: linear-gradient(135deg, #2ecc71, #1db15a);
  color: white;
  border-radius: 24px;
  padding: 0 24px;
  height: 44px;
  line-height: 44px;
  font-size: 15px;
  display: flex;
  align-items: center;
  gap: 6px;
}

/* 帖子列表 */
.post-list {
  height: calc(100vh - 140px);
}

.post-card {
  background: white;
  margin: 12px;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
  position: relative;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.post-time {
  font-size: 12px;
  color: #999;
}

/* 操作菜单 */
.post-actions-menu {
  display: flex;
  gap: 12px;
}

.menu-button {
  padding: 6px;
  border-radius: 6px;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 帖子标题 */
.post-title {
  margin-bottom: 12px;
}

.title-text {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 16px;
}

.content-text {
  font-size: 15px;
  color: #333;
  line-height: 1.5;
}

/* 图片 */
.post-images {
  margin-bottom: 16px;
}

.image-item {
  width: 100%;
  margin-bottom: 8px;
  border-radius: 8px;
  overflow: hidden;
}

.post-image {
  width: 100%;
  height: 200px;
  display: block;
}

/* 数据统计 */
.post-stats {
  display: flex;
  gap: 20px;
  margin-bottom: 16px;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6px;
}

.stat-icon {
  width: 16px;
  height: 16px;
  opacity: 0.6;
}

.stat-count {
  font-size: 14px;
  color: #666;
}

/* 操作栏 */
.post-actions {
  display: flex;
  justify-content: space-around;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.action-icon {
  width: 24px;
  height: 24px;
}

.action-text {
  font-size: 12px;
  color: #666;
}

.action-item.liked .action-text {
  color: #2ecc71;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30px 0;
  color: #999;
  font-size: 14px;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.mini-spinner {
  width: 20px;
  height: 20px;
  border: 2px solid #f3f3f3;
  border-top: 2px solid #2ecc71;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* 底部空白 */
.bottom-space {
  height: 100px;
}

/* 悬浮按钮 */
.float-action-btn {
  position: fixed;
  right: 24px;
  bottom: 100px;
  width: 56px;
  height: 56px;
  background: linear-gradient(135deg, #2ecc71, #2ecc71);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(0, 255, 76, 0.3);
  z-index: 1000;
}

.float-action-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.2);
}

.float-action-btn .add-icon {
  width: 48rpx;
  height: 48rpx;
}