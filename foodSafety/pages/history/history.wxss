/* pages/history/history.wxss */

/* 基础样式 */
.history-page {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 状态栏 */
.status-bar {
  background: #ffffff;
}

/* 导航栏 */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-left {
  flex: 1;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-action {
  padding: 12rpx 24rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
}

.action-text {
  font-size: 26rpx;
  color: #e74c3c;
  font-weight: 500;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx 30rpx;
  padding: 40rpx 20rpx;
  border-radius: 20rpx;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-number {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stats-safe {
  color: #2ecc71;
}

.stats-risk {
  color: #ffa726;
}

.stats-danger {
  color: #ef4444;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stats-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 筛选栏 */
.filter-bar {
  background: #ffffff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-container {
  display: inline-flex;
  gap: 20rpx;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 32rpx;
  background: #f8f9fa;
  border-radius: 40rpx;
  border: 1rpx solid #e9ecef;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.filter-item.active {
  background: #f8f9fa;
  font-weight: 500;
}

.filter-text {
  margin-right: 8rpx;
}

.filter-count {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 历史记录列表 */
.history-content {
  padding: 30rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #2ecc71;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty-illustration {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.empty-image {
  width: 100%;
  height: 100%;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.empty-action {
  padding: 25rpx 50rpx;
  background: #2ecc71;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(46, 204, 113, 0.3);
}

.empty-action .action-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 历史记录卡片 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.history-card {
  display: flex;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border-left: 8rpx solid #2ecc71;
}

.history-card.card-risk {
  border-left-color: #e74c3c;
}

.history-card.card-danger {
  border-left-color: #c0392b;
}

.history-card.card-safe {
  border-left-color: #2ecc71;
}

/* 悬停效果 */
.card-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

/* 商品图片 */
.card-image-container {
  position: relative;
  width: 200rpx;
  flex-shrink: 0;
}

.card-image {
  width: 100%;
  height: 100%;
  background: #f8f9fa;
}

/* 角标 */
.card-corner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 100rpx;
  background: #2ecc71;
  clip-path: polygon(0 0, 100% 0, 0 100%);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 12rpx;
}

.corner-safe {
  background: #2ecc71;
}

.corner-risk {
  background: #e74c3c;
}

.corner-danger {
  background: #c0392b;
}

.corner-text {
  font-size: 18rpx;
  color: #ffffff;
  margin-top: 4rpx;
  line-height: 1.2;
  max-width: 60rpx;
}

/* 卡片内容 */
.card-content {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.product-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-right: 15rpx;
}

.arrow-icon {
  margin-top: 8rpx;
}

/* 风险提示 */
.risk-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(231, 76, 60, 0.1);
  padding: 12rpx 16rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(231, 76, 60, 0.2);
}

.hint-text {
  font-size: 24rpx;
  color: #e74c3c;
  line-height: 1.4;
}

/* 配料简略 */
.ingredients-preview {
  background: #f8f9fa;
  padding: 12rpx 18rpx;
  border-radius: 10rpx;
}

.preview-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.scan-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time-text {
  font-size: 24rpx;
  color: #999;
}

.barcode-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 12rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.barcode-info:active {
  background: #e9ecef;
}

.barcode-text {
  font-size: 24rpx;
  color: #666;
}

.copy-icon {
  margin-left: 4rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.more-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #2ecc71;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.more-text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  display: flex;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 底部安全提示 */
.safety-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 30rpx;
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #666;
}