/* pages/index/index.wxss */

/* 页面基础样式 */
.index-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
  position: relative;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 状态栏 */
.status-bar {
  background: transparent;
}

/* 头部区域 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 0;
  margin-bottom: 24rpx;
}

.header-left {
  flex: 1;
}

.greeting {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.date-time {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 400;
}

.header-right {
  margin-left: 24rpx;
}

.avatar-container {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  box-shadow: 0 4rpx 12rpx rgba(46, 204, 113, 0.2);
  overflow: hidden;
}

.user-avatar.default {
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 32rpx;
  color: white;
  font-weight: 600;
}

.online-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 20rpx;
  height: 20rpx;
  background: #2ecc71;
  border: 4rpx solid white;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(46, 204, 113, 0.3);
}

/* 搜索卡片 */
.search-card {
  background: white;
  margin: 0 32rpx 32rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid rgba(229, 231, 235, 0.5);
}

.search-container {
  margin-bottom: 32rpx;
}

.search-wrapper {
  display: flex;
  align-items: center;
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.search-wrapper:active {
  border-color: #2ecc71;
  background: #f0fdf4;
  transform: translateY(-2rpx);
}

.search-icon {
  margin-right: 16rpx;
  opacity: 0.8;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
  height: 40rpx;
  line-height: 40rpx;
}

.placeholder {
  color: #9ca3af;
  font-size: 28rpx;
}

.scan-mini-btn {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(46, 204, 113, 0.3);
}

/* 热门搜索 */
.hot-tags {
  display: flex;
  align-items: center;
}

.hot-title {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  white-space: nowrap;
  margin-right: 20rpx;
}

.tags-scroll {
  flex: 1;
  height: 48rpx;
}

.tags-container {
  display: flex;
  height: 100%;
  align-items: center;
}

.tag-item {
  margin-right: 20rpx;
  padding: 8rpx 20rpx;
  background: #f3f4f6;
  border-radius: 24rpx;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.tag-item:active {
  background: #e5e7eb;
  transform: scale(0.95);
}

.tag-text {
  font-size: 24rpx;
  color: #4b5563;
  font-weight: 500;
}

/* 章节标题 */
.section-title {
  position: relative;
  margin-bottom: 32rpx;
  padding-left: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  position: relative;
  z-index: 1;
}

.title-decoration {
  position: absolute;
  left: 0;
  bottom: 8rpx;
  width: 120rpx;
  height: 12rpx;
  background: linear-gradient(90deg, rgba(46, 204, 113, 0.2) 0%, rgba(46, 204, 113, 0) 100%);
  border-radius: 6rpx;
}

/* 核心功能区 */
.core-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.scan-card {
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(46, 204, 113, 0.3);
}

.scan-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -150rpx;
  left: -150rpx;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.scan-main {
  position: relative;
  z-index: 1;
  text-align: center;
}

.scan-icon-container {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
}

.scan-icon-bg {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.scan-icon {
  width: 56px;
  height: 56px;
  z-index: 10;
  position: relative;
}

.scan-pulse-ring {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 50%;
  animation: pulse-ring 2s infinite;
}

.scan-pulse-ring.delay-1 {
  animation-delay: 0.66s;
}

.scan-pulse-ring.delay-2 {
  animation-delay: 1.33s;
}

@keyframes pulse-ring {
  0% {
    transform: scale(0.8);
    opacity: 1;
  }
  100% {
    transform: scale(1.2);
    opacity: 0;
  }
}

.scan-title {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.scan-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 48rpx;
  opacity: 0.9;
}

.scan-stats {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 24rpx 0;
  margin: 0 auto 40rpx;
  max-width: 600rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.85);
}

.scan-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.tip-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-left: 8rpx;
}

/* 快捷功能 */
.quick-features {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid rgba(229, 231, 235, 0.5);
  transition: all 0.3s ease;
}

.card-hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
  border-color: #2ecc71;
}

.feature-icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-right: 24rpx;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
}

.icon-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 3rpx solid white;
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.feature-desc {
  display: block;
  font-size: 22rpx;
  color: #6b7280;
}

.feature-arrow {
  opacity: 0.6;
}

/* 最近扫描 */
.recent-scans {
  padding: 0 32rpx 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.see-all {
  font-size: 24rpx;
  color: #2ecc71;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.recent-list {
  width: 100%;
  white-space: nowrap;
  height: 420rpx;
}

.recent-container {
  display: inline-flex;
  gap: 24rpx;
}

.recent-card {
  width: 320rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  display: inline-flex;
  flex-direction: column;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid rgba(229, 231, 235, 0.5);
  position: relative;
}

.product-image-container {
  width: 100%;
  height: 240rpx;
  position: relative;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.recent-card:active .product-image {
  transform: scale(1.05);
}

.safety-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
}

.badge-safe {
  background: rgba(46, 204, 113, 0.9);
  color: white;
}

.badge-danger {
  background: rgba(239, 68, 68, 0.9);
  color: white;
}

.badge-text {
  margin-left: 4rpx;
}

.risk-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, transparent 0%, rgba(239, 68, 68, 0.9) 100%);
  padding: 20rpx 16rpx 16rpx;
}

.hint-text {
  font-size: 20rpx;
  color: white;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-info {
  padding: 24rpx;
  flex: 1;
}

.product-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}

.product-meta, .barcode-info {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.scan-time, .barcode-text {
  font-size: 20rpx;
  color: #6b7280;
  margin-left: 8rpx;
}

.barcode-info {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 12rpx;
  margin-top: 8rpx;
  transition: all 0.2s ease;
}

.barcode-info:active {
  background: #f3f4f6;
}

.copy-icon {
  margin-left: auto;
  opacity: 0.6;
}

.product-actions {
  padding: 0 24rpx 24rpx;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  transition: all 0.2s ease;
}

.action-btn:active {
  background: #f3f4f6;
}

.view-more-card {
  width: 320rpx;
  background: white;
  border-radius: 24rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #d1d5db;
  transition: all 0.3s ease;
}

.view-more-card:active {
  border-color: #2ecc71;
  background: #f0fdf4;
}

.more-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.more-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
}

.more-count {
  font-size: 20rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-illustration {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 40rpx;
}

.empty-image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 48rpx;
}

.empty-action {
  display: inline-block;
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(46, 204, 113, 0.3);
  transition: all 0.3s ease;
}

.empty-action:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 32rpx rgba(46, 204, 113, 0.4);
}

/* 底部信息 */
.footer {
  padding: 48rpx 32rpx 32rpx;
  border-top: 2rpx solid rgba(229, 231, 235, 0.5);
  margin-top: auto;
}

.safety-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0fdf4;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid rgba(46, 204, 113, 0.2);
}

.tips-text {
  font-size: 24rpx;
  color: #065f46;
  margin-left: 12rpx;
  font-weight: 500;
}

.app-info {
  text-align: center;
}

.version {
  display: block;
  font-size: 20rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
}

.slogan {
  display: block;
  font-size: 20rpx;
  color: #6b7280;
}

/* 搜索历史弹窗 */
.search-history-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding: 40rpx 32rpx;
  max-height: 70vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-btn {
  font-size: 24rpx;
  color: #ef4444;
  font-weight: 500;
}

.close-btn {
  padding: 8rpx;
}

.history-list {
  max-height: 50vh;
  overflow-y: auto;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
  transition: all 0.2s ease;
}

.history-item:active {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  margin: 0 -16rpx;
}

.history-text {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
  margin-left: 16rpx;
}

/* 扫码加载动画 */
.scan-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(20rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.loading-spinner {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.spinner-ring {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 4rpx solid rgba(46, 204, 113, 0.2);
  border-radius: 50%;
  animation: spinner-rotate 1.5s linear infinite;
}

.spinner-ring.delay-1 {
  animation-delay: 0.5s;
}

.spinner-ring.delay-2 {
  animation-delay: 1s;
}

@keyframes spinner-rotate {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.spinner-icon {
  animation: spinner-icon-rotate 2s linear infinite;
}

@keyframes spinner-icon-rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.loading-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 下拉刷新提示 */
.refresh-indicator {
  position: fixed;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  background: white;
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  gap: 16rpx;
  z-index: 100;
}

.refresh-spinner {
  display: flex;
  gap: 8rpx;
}

.refresh-dot {
  width: 12rpx;
  height: 12rpx;
  background: #2ecc71;
  border-radius: 50%;
  animation: refresh-dot 1.4s ease-in-out infinite;
}

.refresh-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.refresh-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes refresh-dot {
  0%, 60%, 100% {
    transform: translateY(0);
  }
  30% {
    transform: translateY(-20rpx);
  }
}

.refresh-text {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
}